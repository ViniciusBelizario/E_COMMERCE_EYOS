        </button>
<!-- Carrossel de Produtos -->
<div class="product-carousel-wrapper">
  <div class="product-carousel-track">
    <% if (products && products.length > 0) { %>
      <% products.slice(0, 10).forEach(function(product) { %> <!-- Limita a 10 produtos -->
        <div class="product-card">
          <div class="product-image-wrapper">
            <% if (product.imagem_url) { %>
              <img
                src="http://localhost:3001<%= product.imagem_url %>"
                alt="<%= product.nome %>"
                class="product-image"
              />
            <% } else { %>
              <img
                src="/images/placeholder.png"
                alt="Sem imagem"
                class="product-image"
              />
            <% } %>

            <!-- Botão de Compra Rápida -->
            <button 
              class="quick-buy-btn"
              onclick="compraRapida('<%= product.id %>', '<%= product.nome %>', '<%= parseFloat(product.preco).toFixed(2) %>', 'http://localhost:3001<%= product.imagem_url %>')"
            >
              Compra Rápida
            </button>
          </div>

          <div class="product-info">
            <h3 class="product-name"><%= product.nome %></h3>
            <p class="product-description"><%= product.descricao %></p>
            <p class="product-price">
              <span class="original-price">R$ <%= parseFloat(product.preco).toFixed(2) %></span>
            </p>
          </div>
        </div>
      <% }); %>
    <% } else { %>
      <p>Nenhum produto disponível no momento.</p>
    <% } %>
  </div>
</div>




