<% layout('layout') -%>
<section class="space-y-6">
  <h1 class="text-2xl font-semibold">Busca • Marca + comProdutos</h1>

  <form method="GET" class="bg-white border rounded p-4 grid md:grid-cols-4 gap-4">
    <%- include('../components/formInput', { name:'nome', label:'Nome parcial', value:nome || '', placeholder:'Ex.: adi' }) %>
    <div class="flex flex-col gap-1">
      <label class="text-sm text-slate-700">Com produtos</label>
      <select name="comProdutos" class="border rounded px-3 py-2">
        <option value="">Não</option>
        <option value="1" <%= comProdutos === '1' ? 'selected' : '' %>>Sim</option>
      </select>
    </div>
    <div class="md:col-span-4"><button class="btn">Buscar</button></div>
  </form>

  <%- include('../components/table', {
    cols: [
      { key:'id',   label:'ID' },
      { key:'nome', label:'Marca' }
    ],
    rows: items,
    basePath: '#'
  }) %>
</section>
